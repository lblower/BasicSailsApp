<% include partials/basicheader %>
<div class="container">
<% if(userinfo.length){
%>
		<table class="table table-striped  table-condensed">
  <tr><th></th><th> ID</th><th> Name</th> <th>Email</th><th>Contact</th><th>Status</th><th colspan="3">Actions</th></tr>

<% userinfo.forEach((users) =>{ %>


		    				<tr>

									<% if(users.online){  %>

								<td><img src='images/online.png' width=20  title='Online' > </td>
								<% }else{ %>
									<td><img src='/images/offline.png' width=20 title='offline' > </td>
								<%  } %>

                    	<td> <%= users.id  %> </td>
			    				    <td> <%= users.firstname  %>    <%= users.lastname  %> </td>

                      <td>	<%= users.email  %> </td>

                      <td> <%= users.contact  %> </td>
												<% if(users.admin){  %>
												 
                      <td><img src='images/admin.png' width=50  title='Admin' > </td>
											<% }else{ %>
												<td><img src='/images/people.png' width=50 title='people' > </td>
											<%  } %>

                      <td><a href='user/<%= users.id %>' class="btn btn-primary">Show</a></td>

                      <td><a href='useredit/<%= users.id %>' class="btn btn-warning">Edit</a></td>

                      <td>  <a href='userdel/<%= users.id %>'  class="btn btn-danger">Delete</a></td>

                  </tr>


<%   }); %>
                </table>
  <%
 }else{
%>
  <div class="row centered-form">

  <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">User Info</h3>
      </div>
      <div class="panel-body" >

          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
              <label class="margin padding"> Name  :  </label><label> <%= userinfo.firstname  %>    <%= userinfo.lastname  %> </label>
              </div>
            </div>

          </div>

          <div class="form-group">
          <label class="margin padding bold"> Email :  </label>	<label><%= userinfo.email  %></label>
          </div>

          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <label class="margin paddin"> Password  :  </label> <label   style='word-wrap: break-word;'><%= userinfo.password  %></label>
              </div>
            </div>
    </div>
    <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">

              <div class="form-group">
              <label class="margin padding"> Contact  :  </label> 	<label><%= userinfo.contact  %></label>
              </div>
            </div>
          </div>



          <div class="row">
              <div class="col-xs-3 col-sm-3 col-md-3">
                <a href='/useredit/<%= userinfo.id %>' class="btn btn-primary">Edit</a>
            </div>

              <div class="col-xs-3 col-sm-3 col-md-3">
                <a href='/userdel/<%= userinfo.id %>' class="btn btn-danger">Delete</a>
              </div>
            </div>



      </div>
    </div>
  </div>
</div>

<% } %>

</div>



<% include /partials/footer %>
